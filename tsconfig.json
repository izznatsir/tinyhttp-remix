{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"lib": ["esnext"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"noUncheckedIndexedAccess": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"verbatimModuleSyntax": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	},
	"include": ["**/*.ts"]
}
